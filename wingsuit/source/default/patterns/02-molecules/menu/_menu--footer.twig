<nav role="navigation">
  <ul class="list-reset mb-6 grid lg:block">
    {% for item in items %}
      <li class="mt-2 inline-block mr-2 md:block md:mr-0">
        <a class="text-gray-600 hover:text-gray-800 {% if (item.in_active_trail) %}is-active{% endif %}" href="{{ item.url }}">
          {{ item.title }}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>

